#include <iostream>
#include <thread>
#include <chrono>
#include <string>
bool validation(const std::string input) {
    for (auto c : input) {
        if (c < 32 || c > 126) {
            return false;
        }
    }
 return true;
}
void ascii_locker(const std::string& target) {
        std::string result;
        for (char t : target) {
            for (char c = 32; c <= 126; ++c) {
                std::cout << "\r" << result << c;
                std::this_thread::sleep_for(std::chrono::milliseconds(30));
                if (c == t) {
                    result += c;
                    break;
                }
            }
        }
    }
 void run_function_ascii_locker() {
     std::string input;
     while (std::getline(std::cin,input)) {
         if(!validation(input)){
             std::cerr << "Error: Input contains non-printable ASCII characters" << std::endl;
         }
        ascii_locker(input);
    }
}
int main() {
    run_function_ascii_locker();
    }
