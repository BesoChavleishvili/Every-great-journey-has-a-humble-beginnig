#include <iostream>
#include <thread>
#include <chrono>
#include <string>
void ascii_locker(const std::string& target) {
        std::string result;
        for (char t : target) {
            for (char c = 32; c <= 126; ++c) {
                std::cout << "\r" << result << c << std::flush;
                std::this_thread::sleep_for(std::chrono::milliseconds(30));
                if (c == t) {
                    result += c;
                    break;
                }
            }
        }
    }
 void run_function_ascii_locker() {
     std::string input;
    while (std::cin >> input) {
        ascii_locker(input);
    }
}
int main() {
    run_function_ascii_locker();
    }
